<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
<input type="hidden" id="hidden" name="_method" value ="patch">

<label for="name">Name</label> <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>"></br>
<label for="year_completed">Year Completed</label> <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"></br></br>

<input type="submit" value="Edit Landmark">

</form>

<a class="button" href="/landmarks">Landmarks</a>
